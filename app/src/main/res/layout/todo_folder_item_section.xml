<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/materialBackground"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">
    <ImageButton
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:id="@+id/delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/actionBarItemBackground"
        android:src="?attr/deleteIcon" />

    <ImageButton
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:id="@+id/color_image_button"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/actionBarItemBackground"
        android:src="@drawable/circle" />

    <FrameLayout
        android:layout_width="0dp"
        android:width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/dummy_frame_layout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px" />

        <EditText
            android:fallbackLineSpacing="false"

            android:textSize="16sp"
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionSend"
            android:maxLength="24" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="?attr/primaryTextColor" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:id="@+id/drag_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="?attr/dragIcon" />

        <ImageButton
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:id="@+id/confirm_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/actionBarItemBackground"
            android:src="?attr/confirmSettingsIcon" />
    </FrameLayout>
</LinearLayout>