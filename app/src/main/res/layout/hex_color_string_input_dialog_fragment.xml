<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:foreground="?attr/rectangleWithBorderForColorPicker">
            <TextView
                android:gravity="center"
                android:padding="8dp"

                android:id="@+id/display_text_view"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:singleLine="true"
                android:textSize="18sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="0" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="1" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="2" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="4" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="5" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="6" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="8" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="9" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="A" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="C" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="D" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="E" />
            <Button
                android:gravity="center"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:text="F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:gravity="center"
                android:visibility="invisible"

                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground" />
            <Button
                android:gravity="center"
                android:visibility="invisible"

                android:textSize="18sp"
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground" />
            <ImageButton
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:src="?attr/backspaceIcon"
                android:id="@+id/backspace_image_button" />
            <ImageButton
                android:minHeight="56dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarItemBackground"
                android:src="?attr/confirmInputIcon"
                android:id="@+id/confirm_input_image_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
