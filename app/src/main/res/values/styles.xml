<resources>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.WeTodo.Base.Black" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="themeName">Black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentLight</item>

        <item name="appBarLayoutTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="noteToolbarForeground">@color/noteToolbarForegroundWhite</item>
        <item name="toolbarForeground">@color/toolbarForegroundWhite</item>

        <item name="trashToolbarColor">@color/trashToolbarColorLight</item>
        <item name="trashStatusBarColor">@color/trashStatusBarColorLight</item>

        <item name="mainMenuTextSelector">@null</item>
        <item name="mainMenuIconSelector">@null</item>

        <item name="addIcon">@drawable/baseline_add_white_24</item>
        <item name="deleteIcon">@drawable/ic_close_black_24dp</item>
        <item name="confirmSettingsIcon">@drawable/baseline_done_black_24</item>
        <item name="dragIcon">@drawable/baseline_drag_handle_black_24</item>

        <item name="blueTabColor">@color/blueTabColorLight</item>
        <item name="greenTabColor">@color/greenTabColorLight</item>
        <item name="redTabColor">@color/redTabColorLight</item>
        <item name="orangeTabColor">@color/orangeTabColorLight</item>
        <item name="purpleTabColor">@color/purpleTabColorLight</item>
        <item name="yellowTabColor">@color/yellowTabColorLight</item>
        <item name="cyanTabColor">@color/cyanTabColorLight</item>
        <item name="greyTabColor">@color/greyTabColorDark</item>
        
        <item name="normalTabColor">@color/normalTabColorDark</item>

        <item name="tabTextColor">@color/tabTextColorLight</item>
        <item name="tabIconColor">@color/tabIconColorLight</item>
        <item name="settingsTabIcon">@drawable/ic_settings_white_18dp</item>

        <item name="recyclerViewBackground">@color/recyclerViewBackgroundLight</item>

        <item name="materialBackground">@color/materialBackgroundLight</item>

        <item name="colorPickerBorderColor">@color/colorPickerBorderColorLight</item>

        <item name="primaryTextColor">@color/primaryTextColorLight</item>
        <item name="secondaryTextColor">@color/secondaryTextColorLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
